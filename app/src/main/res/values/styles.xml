<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    // edit text styles
    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:layout_marginStart">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:padding">10dp</item>
        <item name="background">@drawable/gradiant_edit_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    // blur edit text styles
    <style name="edit_text_blur">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="background">@drawable/gradiant_edit_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    //button styles
    <style name="btn_login">
        <item name="background">@drawable/btn_gradiant_edit_round</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    //toolbar styles
    <style name="toolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="backgroundColor">@color/dark_blue</item>
    </style>
    //form header
    <style name="form_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>