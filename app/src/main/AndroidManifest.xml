<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/paymedialogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/paymedialogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarromApp">
        <activity
            android:name=".activity.ThirdScreenActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SecondScreenActivity"
            android:exported="false" />
        <activity
            android:name=".activity.IntroActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FirstScreenActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>